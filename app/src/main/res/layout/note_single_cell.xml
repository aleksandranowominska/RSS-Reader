<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    app:ignore="NamespaceTypo">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/note_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        card_view:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true"
        android:layout_marginBottom="10dp" >

        <RelativeLayout
            android:id="@+id/card_view_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/note_main_image"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="200dp" />


            <TextView
                android:id="@+id/note_title"
                android:layout_below="@id/note_main_image"
                android:layout_toLeftOf="@id/note_publish_date"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Some title of the post" />


            <TextView
                android:id="@+id/note_publish_date"
                android:layout_below="@id/note_main_image"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="25.11.2017" />


            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/note_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:layout_below="@id/note_publish_date"
                android:layout_centerVertical="true"
                android:text="Some descriprion of the post some descriprion of the post some descriprion of the post some descriprion of the post some descriprion of the post some descriprion of the post some descriprion of the post some descriprion of the post some descriprion of the post some descriprion of the post some descriprion of the post some descriprion of the post " />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>